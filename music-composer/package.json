{
  "name": "music-composer-app",
  "version": "1.0.0",
  "description": "Full-stack music composition and sight reading application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/music-composer-app.git"
  },
  "keywords": [
    "music",
    "composition",
    "sight-reading",
    "react",
    "express",
    "vexflow"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}